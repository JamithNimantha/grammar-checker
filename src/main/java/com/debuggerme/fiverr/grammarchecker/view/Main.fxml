<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefHeight="231.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.debuggerme.fiverr.grammarchecker.controller.MainController">
   <children>
       <Button fx:id="btnFolder" layoutX="11.0" layoutY="54.0" mnemonicParsing="false" onAction="#btnFolderOnAction"
               prefHeight="29.0" prefWidth="127.0" styleClass="button-search" stylesheets="@style.css"
               text="Choose Folder">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
       <TextField fx:id="txtFolder" editable="false" focusTraversable="false" layoutX="150.0" layoutY="54.0"
                  prefHeight="29.0" prefWidth="439.0" styleClass="text-field" stylesheets="@style.css">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
       <Button fx:id="btnStart" layoutX="233.0" layoutY="101.0" mnemonicParsing="false" onAction="#btnStartOnStart"
               prefHeight="52.0" prefWidth="138.0" styleClass="button-save" stylesheets="@style.css" text="Start">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Button>
       <Label fx:id="lblNumOfArticles" alignment="CENTER" layoutX="-1.0" layoutY="12.0" prefHeight="29.0"
              prefWidth="600.0" style="-fx-text-fill: #ff9f0a;" textAlignment="CENTER">
         <font>
             <Font name="System Bold" size="13.0"/>
         </font>
      </Label>
       <ImageView fx:id="imgLoader" fitHeight="150.0" fitWidth="200.0" layoutX="211.0" layoutY="26.0"
                  pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
             <Image url="@../assets/loader.gif"/>
         </image>
      </ImageView>
       <Label fx:id="lblProgress" alignment="CENTER" layoutX="-1.0" layoutY="175.0" prefHeight="40.0" prefWidth="600.0"
              style="-fx-text-fill: #ff422b;" textAlignment="CENTER">
           <font>
               <Font name="System Bold" size="15.0"/>
           </font>
       </Label>
   </children>
</AnchorPane>
